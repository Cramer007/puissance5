#include "Joueur.h"
#include "Plateau.h"
#include <cstdlib>

Joueur::Joueur(const std::string& n, char s, bool ia) : nom(n), symbole(s), estIA(ia) {}

char Joueur::obtenirSymbole() const {
    return symbole;
}

std::string Joueur::obtenirNom() const {
    return nom;
}

bool Joueur::estUnIA() const {
    return estIA;
}

int Joueur::choisirColonneAleatoire(int nbColonnes) const {
    return std::rand() % nbColonnes;
}

int Joueur::choisirColonneMinimax(const Plateau& plateau, char symboleAdversaire) const {
    return plateau.trouverMeilleurCoup(symbole, symboleAdversaire);
}
